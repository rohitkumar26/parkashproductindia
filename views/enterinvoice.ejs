<h1 class="title is-1">Enter Invoice Details</h1>

<form action="/invoices" method="post">
  <input
    type="number"
    class="input"
    name="invoiceid"
    placeholder="invoice id"
  /><br />
  <input type="date" class="input" name="date" placeholder="date" /><br />
  <div class="select">
    <select name="clients" class="is-capitalized">
      <option value="">please select name...</option>
      <% clients.forEach((client)=>{ %>
      <option value="<%= client._id %>"><%= client.name %></option>
      <% } )%>
    </select>
  </div>
  <br />
  <input
    type="text"
    name="items[0][name]"
    placeholder="name"
    class="items"
  /><input
    type="number"
    name="items[0][price]"
    placeholder="price"
    class="items"
  /><input
    type="number"
    name="items[0][quantity]"
    placeholder="quantity"
    class="items"
  /><button id="additem">
    +</button
  ><br />
  <input type="number" class="input" name="gst" placeholder="gst" id="cgst" />
  <br />

  <input type="submit" class="button is-link" value="submit" />
  <input type="reset" class="button is-success" value="reset" />
</form>
<script src="/js/invoice.js"></script>
