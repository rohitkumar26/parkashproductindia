<h1 class="title is-1">Enter Clients Payments</h1>
<form action="/clientpayment" method="post">
  <div class="select">
    <select name="client" class="is-capitalized" required>
      <option value="">Please select name....</option>
      <% clients.map(cl=>{ %>
      <option value="<%= cl._id %>"><%= cl.name %></option>
      <% }) %>
    </select>
  </div>
  <br />
  <input type="date" class="input" name="date" required /><br />
  <input
    type="number"
    class="input"
    name="payment"
    placeholder="payment"
    required
  /><br />
  <input
    type="text"
    class="input"
    name="chequeno"
    placeholder="cheque no "
    required
  /><br />

  <input type="submit" class="button is-link" value="Submit" />
  <input type="reset" class="button is-success" value="Reset" />
</form>
